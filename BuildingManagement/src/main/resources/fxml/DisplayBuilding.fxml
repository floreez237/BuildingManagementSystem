<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<Pane xmlns:fx="http://javafx.com/fxml/1" prefHeight="722.0" prefWidth="744.0" xmlns="http://javafx.com/javafx/8.0.141"
      fx:controller="buildingProject.controllers.DisplayBuildingController">
    <children>
        <Label layoutX="46.0" layoutY="132.0" text="BuildingID:">
            <font>
                <Font size="20.0"/>
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#00e5ff"/>
                        <Stop color="#2979ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>
        <JFXTextField fx:id="tfBuildingId" layoutX="159.0" layoutY="124.0" prefHeight="31.0" prefWidth="187.0">
            <focusColor>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#00e5ff"/>
                        <Stop color="#2979ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </focusColor>
        </JFXTextField>
        <Label layoutX="85.0" layoutY="43.0" text="Building Information" underline="true">
            <font>
                <Font size="29.0"/>
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#00e5ff"/>
                        <Stop color="#2979ff" offset="1.0"/>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>
        <JFXButton fx:id="back" layoutX="5.0" layoutY="23.0" onAction="#goBack" text=" "/>
        <Accordion layoutX="60.0" layoutY="398.0" prefHeight="94.0" prefWidth="206.0"/>
        <GridPane layoutX="46.0" layoutY="169.0" prefHeight="94.0" prefWidth="582.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="10.0" prefWidth="107.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="459.0" minWidth="10.0" prefWidth="451.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label prefHeight="29.0" prefWidth="95.0" text="     Location:" GridPane.rowIndex="1">
                    <font>
                        <Font name="Cambria" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <Label prefHeight="22.0" prefWidth="98.0" text="           Name:">
                    <font>
                        <Font name="Cambria" size="18.0"/>
                    </font>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <JFXTextField fx:id="tfName" focusColor="#00e5ff" GridPane.columnIndex="1"/>
                <JFXTextField fx:id="tfLocation" focusColor="#00e5ff" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <Label layoutX="425.0" layoutY="132.0" text="Number of :&#10;     levels">
            <font>
                <Font name="Cambria" size="18.0"/>
            </font>
        </Label>
        <JFXTextField fx:id="tfNumberOfLevels" focusColor="#00e5ff" layoutX="522.0" layoutY="124.0" prefHeight="31.0"
                      prefWidth="105.0"/>
        <GridPane layoutX="24.0" layoutY="284.0" prefHeight="13.0" prefWidth="606.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="132.0" minWidth="10.0" prefWidth="132.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="151.0" minWidth="10.0" prefWidth="122.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="235.0" minWidth="10.0" prefWidth="235.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="141.0" minWidth="10.0" prefWidth="93.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Free Rooms:" GridPane.rowIndex="1">
                    <font>
                        <Font name="Cambria" size="18.0"/>
                    </font>
                    <padding>
                        <Insets left="30.0"/>
                    </padding>
                </Label>
                <JFXTextField fx:id="tfFreeRooms" focusColor="#00e5ff" prefHeight="31.0" prefWidth="129.0"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label prefHeight="22.0" prefWidth="217.0" text="Occupied Rooms:" GridPane.columnIndex="2"
                       GridPane.rowIndex="1">
                    <font>
                        <Font name="Cambria" size="18.0"/>
                    </font>
                    <padding>
                        <Insets left="50.0"/>
                    </padding>
                </Label>
                <JFXTextField fx:id="tfOccupiedRooms" focusColor="#00e5ff" prefHeight="31.0" prefWidth="137.0"
                              GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <JFXButton layoutX="535.0" layoutY="64.0" onAction="#onDisplayPersons" prefHeight="43.0" prefWidth="105.0"
                   text="Persons">
            <graphic>
                <ImageView fitHeight="27.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/icons8_person_32px.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
        <TitledPane fx:id="tpFurnitures" animated="false" layoutX="76.0" layoutY="345.0" prefHeight="125.0"
                    prefWidth="263.0" text="Furnitures">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="124.0" prefWidth="204.0"/>
            </content>
        </TitledPane>
        <JFXButton layoutX="640.0" layoutY="64.0" onAction="#onUpdate" prefHeight="43.0" prefWidth="91.0" text="Update">
            <graphic>
                <ImageView fitHeight="22.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/icons8_update_24px.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
        <JFXButton layoutX="431.0" layoutY="64.0" onAction="#onDisplayLevels" prefHeight="43.0" prefWidth="91.0"
                   text="Levels">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/icons8_stairs_up_24px.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
        <JFXButton fx:id="goback" layoutX="9.0" layoutY="37.0" prefHeight="55.0" prefWidth="62.0" text=" ">
            <graphic>
                <ImageView fitHeight="46.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/icons8_back_arrow_32px.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
    </children>
</Pane>
